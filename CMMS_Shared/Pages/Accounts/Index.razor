@page "/accounts"
@attribute [Authorize(Roles = "Administrator")]

@if (Users != null && Users.Count > 0)
{
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>E-Mail</th>
                <th>Role</th>
                <th>ID</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Users)
            {
                <tr>
                    <td>@item.NormalizedUserName</td>
                    <td>@item.Email</td>
                    <td>@RegisterService.GetUserRolesById(item.Id)</td>
                    <td>@item.Id</td>
                    <td class="text-right">
                        <button class="btn btn-danger btn-sm" @onclick="@(e => DeleteAccount(item.Id))" role="button">Delete</button>
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>
}
